<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BugPorter.Client.Pages.SignUpView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:features="clr-namespace:BugPorter.Client.Features"
    xmlns:local="clr-namespace:BugPorter.Client.Pages"
    xmlns:shared="clr-namespace:BugPorter.Client.Shared"
    Title="SignUp View"
    x:DataType="local:SignUpViewModel">
    <ScrollView>
        <VerticalStackLayout Padding="25" MaximumWidthRequest="1000">
            <Label FontSize="Large" Text="Sign Up" />
            <features:SignUpFormView Margin="0,25,0,0" BindingContext="{Binding SignUpFormViewModel}" />
            <shared:Link Route="//SignIn" Text="Have an account? Sign in" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>