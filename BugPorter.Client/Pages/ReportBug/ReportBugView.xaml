<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BugPorter.Client.Pages.ReportBugView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BugPorter.Client.Pages"
    xmlns:features="clr-namespace:BugPorter.Client.Features"
    x:DataType="local:ReportBugViewModel">
    <ScrollView>
        <VerticalStackLayout Padding="25" MaximumWidthRequest="1000">
            <Label FontSize="Large" Text="Report a Bug" />
            <features:ReportBugFormView Margin="0,25,0,0" BindingContext="{Binding ReportBugFormViewModel}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
