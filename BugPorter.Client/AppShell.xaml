<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BugPorter.Client.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BugPorter.Client"
    xmlns:pages="clr-namespace:BugPorter.Client.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <ShellContent
        Title="Report Bug"
        ContentTemplate="{DataTemplate pages:ReportBugView}"
        Route="ReportBug" />

    <ShellContent
        Title="Sign Up"
        ContentTemplate="{DataTemplate pages:SignUpView}"
        Route="SignUp" />

    <ShellContent
        Title="Sign In"
        ContentTemplate="{DataTemplate pages:SignInView}"
        Route="SignIn" />

</Shell>
